# Configuration Docker pour Foundation Sociale
# Copiez ce fichier vers .env et modifiez selon vos besoins

# Base de données MySQL
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=foundation
MYSQL_USER=foundation
MYSQL_PASSWORD=foundation123

# Ports des services
DISCOVERY_PORT=8762
CONFIG_PORT=8888
GATEWAY_PORT=9999
AUTH_PORT=8081
USER_PORT=8082
CONTENT_PORT=8083
SOCIAL_PORT=8084
NOTIFICATION_PORT=8085
ADMIN_PORT=8086
FRONTEND_PORT=4200
ADMINER_PORT=8087
MYSQL_PORT=3307

# Configuration Spring Boot
SPRING_PROFILES_ACTIVE=docker

# URLs des services
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://discovery-service:8762/eureka/
SPRING_CLOUD_CONFIG_URI=http://config-service:8888
SPRING_CONFIG_IMPORT=configserver:http://config-service:8888

# Configuration MySQL
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/foundation?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=foundation
SPRING_DATASOURCE_PASSWORD=foundation123
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.MySQLDialect
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# Configuration JWT (si nécessaire)
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=86400000

# Configuration Email (si nécessaire)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

